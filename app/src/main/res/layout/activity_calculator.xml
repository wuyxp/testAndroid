<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="right|center_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize="40dp"
        android:text="0" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/ac"
                android:layout_weight="1"
                android:text="AC"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/negate"
                android:layout_weight="1"
                android:text="+/-"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/per"
                android:layout_weight="1"
                android:text="%"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/division"
                android:layout_weight="1"
                android:text="/"
                android:layout_margin="1dp"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWrite"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/n7"
                android:layout_weight="1"
                android:text="7"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/n8"
                android:layout_weight="1"
                android:text="8"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/n9"
                android:layout_weight="1"
                android:text="9"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/multiply"
                android:layout_weight="1"
                android:text="*"
                android:layout_margin="1dp"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWrite"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/n4"
                android:layout_weight="1"
                android:text="4"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/n5"
                android:layout_weight="1"
                android:text="5"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/n6"
                android:layout_weight="1"
                android:text="6"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/subtraction"
                android:layout_weight="1"
                android:text="-"
                android:layout_margin="1dp"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWrite"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/n1"
                android:layout_weight="1"
                android:text="1"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/n2"
                android:layout_weight="1"
                android:text="2"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/n3"
                android:layout_weight="1"
                android:text="3"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/addition"
                android:layout_weight="1"
                android:text="+"
                android:layout_margin="1dp"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWrite"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/n0"
                android:layout_weight="1"
                android:text="0"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/point"
                android:layout_weight="1"
                android:text="."
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/c"
                android:layout_weight="1"
                android:text="C"
                android:layout_margin="1dp"
                android:background="@color/colorGray"
                />
            <Button
                android:id="@+id/compute"
                android:layout_weight="1"
                android:text="="
                android:layout_margin="1dp"
                android:background="@color/colorOrange"
                android:textColor="@color/colorWrite"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭并返回"/>
</LinearLayout>
